<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1C0724</item>
        <item name="colorPrimaryDark">@color/TicketPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ImgButton" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/TicketPurple</item>
    </style>

    <style name="AppTheme.ImgButton2" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ImgButton3" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">#00ffffff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
